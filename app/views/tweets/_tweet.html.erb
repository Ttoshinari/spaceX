

<div class = "content_center">
  <div class="col s12 m7">
    <h2 class="header"></h2>
    <div class="card horizontal">
      <div class="card-image">
        <img src="<%= tweet.image %>">
      </div>
      <div class="card-stacked">
        <div class="card-content deep-orange darken-2">
          <!--ユーザーのtextを反映-->
        <%= tweet.text %>
        </div>
        <div class="card-action">
          <a href="#"><%= link_to "編集","/tweets/#{tweet.id}/edit",method: :get%></a>
        </div>

        <div class="card-action">
          <a href="#"><%= link_to "削除","/tweets/#{tweet.id}",method: :delete,data: {confirm: "本当に削除しますか？"} %></a>
        </div>

      </div>
    </div>
  </div>
</div>



